%tr
  %td
    .general-img-wrap-table
      = link_to order_item.book do
        = image_tag order_item.book.avatar_url, class: 'cart-img-shadow pull-left'
  %td
    = link_to order_item.book.title, order_item.book, class: 'title'
    %p.in-grey-600.fw-300
  %td
    %span.font-16.in-gold-500= currency_price(order_item.book.price)
  %td
    = render partial: 'order_items/quantity_field',
      locals: { order_item: order_item, field: local_assigns[:field] }
  %td
    %span.font-16.in-gold-500= currency_price(order_item.sub_total)

  - if local_assigns[:field]
    %td
      = render partial: 'order_items/delete_link', locals: { order_item: order_item }
