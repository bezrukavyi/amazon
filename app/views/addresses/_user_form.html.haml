= simple_form_for object, url: user_path, method: :patch,
  html: { id: "#{type}_address" }, data: { type: 'address' } do |field|

  = render partial: 'addresses/fields', locals: { field: field, type: type }

  .mb-40
  .text-center.general-text-align
    = field.button :submit, t('simple_form.titles.save'), class: "btn"
