- if book
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        - path = book.avatar.blank? ? "https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcQ352GRUKdIFLP3va0Tj7QREidI4lwUABrtUJbQehqIL02O_blo" : book.avatar
        = image_tag path, class: 'img-shadow general-thumbnail-img'
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book, class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{"aria-hidden" => "true"}
            %a.thumb-hover-link{:href => "#"}
              %i.fa.fa-shopping-cart.thumb-icon
    .general-thumb-info
      %p.title= book.title
      %p.font-16.in-gold-500= book.price
      %span.divider-sm
      %p.lead.small Bass Jobsen, David Cochran, Ian Whitley
