%main.container.general-main-wrap
  %h1.general-title-margin= t('.order_id', id: @order.id)
  .row.mb-20
    = render 'orders/components_panel', order: @order

  .visible-xs
    - @order.order_items.each do |order_item|
      = render 'order_items/order_item', order_item: order_item

  .hidden-xs.divider-lg.pt-20
    = render 'order_items/table', order_items: @order.order_items

  = render 'result_panel', order: @order
