.container
  = render 'step_nav'

  = simple_form_for current_order, url: checkout_path, class: 'res-mb-100' do |field|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address

    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0= t('billing_address')

        = field.simple_fields_for :billing, @billing do |item_field|
          = render partial: 'addresses/fields',
            locals: { field: item_field, type: 'billing' }

      .col-md-5.col-md-offset-1.mb-25
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0= t('shipping_address')

        = field.simple_fields_for :shipping, @shipping do |item_field|
          = render partial: 'addresses/fields',
            locals: { field: item_field, type: 'shipping' }


    = render 'result_panel'


    .col-md-12.mb-40
      .center-block.general-text-align
        = field.submit 'Save and Continue',
          class: 'button btn btn-default mb-20'
