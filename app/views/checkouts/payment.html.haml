.container.mb-res-50
  = render 'step_nav'

  %h3.general-subtitle Credit Card

  = simple_form_for current_order, url: checkout_path,
    html: { class: 'max-600 mb-80' } do |field|

    = field.simple_fields_for :credit_card, @credit_card do |item_field|
      = render partial: 'credit_cards/fields', locals: { field: item_field }


      = render 'result_panel'


    .col-md-12.mb-40
      .center-block.general-text-align
        = field.submit 'Save and Continue',
          class: 'button btn btn-default mb-20'
