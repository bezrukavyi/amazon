.container
  = render 'step_nav'

  %h3.general-subtitle Shipping

  .visible-xs.mb-40
    = form_tag checkout_path, class: 'delivery_form', method: :patch do
      = render partial: 'deliveries/deliveries_xs',
        locals: { deliveries: @deliveries }


  = form_tag checkout_path, class: 'delivery_form', method: :patch do
    .hidden-xs.mb-res-50
      = render partial: 'deliveries/deliveries_md',
        locals: { deliveries: @deliveries }

    .col-md-12.mb-40
      .center-block.general-text-align
        = render layout: 'result_panel' do
          %tr
            %td
              %p.font-16= "#{t('carts.edit.delivery')}:"
            %td
              %p#order_delivery.font-16= currency_price(current_order.delivery_cost)


    .col-md-12.mb-40
      .center-block.general-text-align
        = submit_tag 'Save and Continue',
          class: 'button btn btn-default mb-20'
