%main.container.general-main-wrap

  = render 'step_nav'

  .text-center.mb-40
    %h3.general-subtitle= t('.thanks_message')
    %p.fw-300= t('.email_confirm', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= t('.order_id', id: @completed_order.id)
        %p.general-address.mb-30= @completed_order.decorate.created_strf

      = render partial: 'addresses/panel', locals: { address: @completed_order.shipping }

    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('.order_id', id: @completed_order.id)
      %p.general-address.mb-30= @completed_order.decorate.created_strf

    .visible-xs
      - @completed_order.order_items.each do |order_item|
        = render partial: 'order_items/order_item',
          locals: { order_item: order_item }

    .hidden-xs
      = render partial: 'order_items/table',
        locals: { order_items: @completed_order.order_items }

  = render 'result_panel'

  .text-center
    = link_to t('back_to_store'), books_path, class: 'btn btn-default mb-20'
