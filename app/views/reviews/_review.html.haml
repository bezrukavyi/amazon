.general-message-wrap.divider-lg

  .clearfix
    = user_avatar(review.user)
    .ml-70
      %div
        .general-message-date.hidden-xs= review.created_strf
        .align-center
          .general-message-name= review.user_name
          - if review.verified?
            .general-message-verified Verified user

      .mb-15
        - review.grade.times do
          %i.fa.fa-star.rate-star

      %p.in-grey-600= review.title
      - if review.desc
        %p= review.desc
