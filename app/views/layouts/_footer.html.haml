              = link_to t('settings'), main_app.edit_user_path, class: 'nav-link'

      .col-sm-3
        %p.general-nav-mail= Figaro.env.mail_support
        %p.general-nav-number= Figaro.env.phone
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
