%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('home'), main_app.root_path, class: 'nav-link'
          %li
            = link_to t('shop'), main_app.books_path, class: 'nav-link'

          - if signed_in?
            %li
              -# = link_to t('orders.title'), corzinus.orders_path, class: 'nav-link'
