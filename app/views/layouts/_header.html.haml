%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'Bookstore', root_path, class: 'navbar-brand'

      = link_to edit_cart_path, class: 'shop-link pull-right visible-xs' do
        %span.shop-icon{class: empty_cart_class}
          %span.shop-quantity= current_order.items_count

    = link_to edit_cart_path, class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon{class: empty_cart_class}
        %span.shop-quantity= current_order.items_count

    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;

        %ul.nav.navbar-nav
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#home", 'aria-expanded': "false", 'aria-controls': "home"}= t('home')
            %ul#home.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - @categories.each do |category|
                %li
                  = link_to category.title, home_path(category.decorate.title_key), class: 'collapse-link'

          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}= t('language.title')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                = link_to t('language.en'), url_for(locale: :en),
                  class: 'collapse-link'
              %li
                = link_to t('language.ru'), url_for(locale: :ru),
                  class: 'collapse-link'

          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#shop", 'aria-expanded': "false", 'aria-controls': "shop"}= t('shop')
            %ul#shop.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - @categories.each do |category|
                %li
                  = link_to category.title, books_path(with_category: category.title),
                    class: 'collapse-link'

          - if signed_in?
            %li
              %a{type: "button", 'data-toggle': "collapse", href: "#account", 'aria-expanded': "false", 'aria-controls': "account"}= t('account')
              %ul#account.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                %li
                  = link_to t('settings'), edit_user_path, class: 'collapse-link'
                %li
                  = link_to t('orders.title'), orders_path, class: 'collapse-link'

              %li.divider{role: "separator"}
              %li
                = link_to t('log_out'), destroy_user_session_path, method: :delete,
                  class: 'collapse-link'
          - else
            %li
              = link_to t('log_in'), new_user_session_path
            %li
              = link_to t('sign_up'), new_user_registration_path

      .hidden-xs
        %ul.nav.navbar-nav
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('home')
            %ul.dropdown-menu
              - @categories.each do |category|
                %li
                  = link_to category.title, home_path(category.decorate.title_key), class: 'collapse-link'


          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('language.title')
            %ul.dropdown-menu
              %li
                = link_to t('language.en'), locale: :en
              %li
                = link_to t('language.ru'), locale: :ru

          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('shop')
            %ul.dropdown-menu
              - @categories.each do |category|
                %li
                  = link_to category.title, books_path(with_category: category.title)

          - if signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('account')
              %ul.dropdown-menu
                %li
                  = link_to t('settings'), edit_user_path
                %li
                  = link_to t('orders.title'), orders_path

                %li.divider{role: "separator"}
                %li
                  = link_to t('log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('log_in'), new_user_session_path
            %li
              = link_to t('sign_up'), new_user_registration_path


  .header-messages
    - if notice
      .alert.alert-success= notice
    - if alert
      .alert.alert-warning= alert
